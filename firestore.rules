rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isBusinessPartner() {
      // Check if user has business_partner role (handling both legacy 'role' string and new 'roles' array)
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return (userData.keys().hasAny(['role']) && userData.role == 'business_partner') || 
             (userData.keys().hasAny(['roles']) && userData.roles.hasAny(['business_partner']));
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Rules ---

    // Global Admin Access
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // User Management
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) || isAdmin();
      
      // Allow users to manage their own subcollections
      match /{document=**} {
        allow read: if isOwner(userId) || isAdmin() || isBusinessPartner();
        allow write: if isOwner(userId) || isAdmin();
      }

      // Allow Business Partners to update job tracker status
      match /jobTracker/{trackerId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId) || isAdmin();
        allow update: if isBusinessPartner(); 
      }
      
      // Portfolio Messages (Public Write, Owner Read)
      match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if isOwner(userId) || isAdmin();
      }

      // Specifically helpful for public access logic if needed, but handled by sub-collections below
      match /portfolios/{portfolioId} {
        allow read: if request.auth != null; // Authenticated users can read portfolios (for verification/viewing)
        allow write: if isOwner(userId) || isAdmin();

        // Analytics Stats
        match /stats/{statId} {
          allow create: if true; // Public can log views/clicks
          allow read: if isOwner(userId) || isAdmin();
        }
      }
      
      // Public Resume Comments/Annotations
      match /resumes/{resumeId}/comments/{commentId} {
        allow read, write: if true;
      }
      match /resumes/{resumeId}/annotations/{annotationId} {
        allow read, write: if true;
      }
    }
    
    // Admins Collection (Self-read)
    match /admins/{userId} {
      allow read: if isOwner(userId);
    }

    // Blog Posts (Public Read, Admin Write)
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Usage Logs
    match /usage_logs/{logId} {
      allow create: if request.auth != null;
    }

    // Public Portfolios
    match /public_portfolios/{portfolioId} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can publish
    }

    // User Themes (Custom Saved Themes)
    match /user_themes/{themeId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Partner Applications (Public Submit, Admin Manage)
    match /partner_applications/{applicationId} {
      allow create: if true; // Public submission
      allow read, write: if isAdmin();
      allow update: if isAdmin();
    }

    // Demo Analytics
    match /analytics/demo_page_events {
      allow read, write: if true;
    }

    // Piano Game Recordings (Public Read/Create)
    match /portfolio_piano_recordings/{recordingId} {
      allow read, create: if true;
    }
    
    
    // --- Job Platform Rules ---
    
    // Job Postings
    match /jobPostings/{jobId} {
      // Read: Public if published, Owner/Admin if draft
      allow read: if resource.data.status == 'published' || 
                    (request.auth != null && resource.data.hrUserId == request.auth.uid) || 
                    isAdmin();
      
      // Create: Must be Business Partner and assign self as owner
      allow create: if request.auth != null && 
                      isBusinessPartner() && 
                      request.resource.data.hrUserId == request.auth.uid;
      
      // Update/Delete: Only Owner or Admin
      allow update, delete: if (request.auth != null && resource.data.hrUserId == request.auth.uid) || 
                               isAdmin();
    }
    
    // Company Profiles (for public job board branding)
    match /companyProfiles/{profileId} {
      // Read: Public access for public job board pages
      allow read: if true;
      
      // Create: Must be Business Partner and assign self as owner
      allow create: if request.auth != null && 
                      isBusinessPartner() && 
                      request.resource.data.hrUserId == request.auth.uid;
      
      // Update/Delete: Only Owner or Admin
      allow update, delete: if (request.auth != null && resource.data.hrUserId == request.auth.uid) || 
                               isAdmin();
    }
    
    // Job Applications
    match /jobApplications/{applicationId} {
      // Read: Applicant OR HR Partner (Owner of the Job) OR Admin
      allow read: if request.auth != null && (
        resource.data.applicantUserId == request.auth.uid || 
        get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.hrUserId == request.auth.uid ||
        isAdmin()
      );
      
      // Create: Authenticated Users (Applicants)
      // Must be applying for themselves
      allow create: if request.auth != null && 
                       request.resource.data.applicantUserId == request.auth.uid;
      
      // Update: HR Partner (for status/notes) OR Admin
      // Applicant generally shouldn't update after submission except maybe withdrawing (delete)
      allow update: if request.auth != null && (
        get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.hrUserId == request.auth.uid ||
        isAdmin()
      );
      
      // Delete: Admin or Applicant (Withdraw) or HR (Archive)
      allow delete: if request.auth != null && (
        resource.data.applicantUserId == request.auth.uid ||
        get(/databases/$(database)/documents/jobPostings/$(resource.data.jobPostingId)).data.hrUserId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // --- Job Search Cache ---
    // Public cached job search results (read by all, written only by Cloud Functions)
    match /jobSearchCache/{queryHash} {
      allow read: if true;  // Public read for cached job data
      allow write: if false; // Only Cloud Functions (admin SDK) can write
    }
    
    // --- Referral Codes ---
    // Premium users can create their own referral codes
    match /referralCodes/{code} {
      allow read: if request.auth != null; // Any authenticated user can read
      allow create: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid; // Can only create for self
      allow update: if request.auth != null; // Allow updates for tracking referrals
      allow delete: if isAdmin(); // Only admins can delete
    }
    
    // --- Indexed Cached Jobs (for smart search) ---
    // Individual job documents with searchable fields
    match /cachedJobs/{jobId} {
      allow read: if true;  // Public read for smart search
      allow write: if false; // Only Cloud Functions (admin SDK) can write
    }
    // --- TikTok Leaderboard (Public) ---
    match /tiktok_leaderboard/{playerId} {
       allow read, write: if true; 
    }

    // --- Contact Messages (Public) ---
    match /contact_messages/{messageId} {
       allow create: if true;
    }

    // --- Stitch Platform Rules ---
    
    // Products: Public read, Merchant write (own products only)
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.merchant_uid == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.merchant_uid == request.auth.uid;
    }

    // Drops: Public read (or auth read), Admin write
    match /drops/{dropId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Authenticated create (own order)
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      allow read: if request.auth != null && (resource.data.user_id == request.auth.uid || isAdmin());
      allow update: if isAdmin();
    }
  }
}
