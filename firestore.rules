rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ Global Admin Access (Allows admins to access EVERYTHING)
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow users to check their own admin status (even if custom claim is missing)
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to access their own data only, OR if they are an admin
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }

    // ✅ FIX: Allow anyone (public) to READ blog posts
    // But only allow authenticated admins to WRITE/EDIT them
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
