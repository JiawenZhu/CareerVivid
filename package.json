{
  "name": "careervivid",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:vite": "vite build",
    "build:next": "cd ../careervivid-next && npm run build",
    "build:copy": "rm -rf dist/nextjs && mkdir -p dist/nextjs && cp -r ../careervivid-next/out/* dist/nextjs/ && cp -r dist/nextjs/_next dist/_next && cp dist/nextjs/embed.js dist/embed.js",
    "build:nfc": "cd ../services/client_website_nfc_card && npm run build && mkdir -p ../../careervivid/dist/services/client_website_nfc_card && cp -r out/* ../../careervivid/dist/services/client_website_nfc_card/",
    "build": "npm run build:vite && npm run build:next && npm run build:nfc && npm run build:copy",
    "lint": "eslint",
    "preview": "vite preview",
    "translate-locales": "node scripts/translate_locales.js",
    "dev:extension": "vite build --watch --config vite.extension.config.ts",
    "build:extension": "vite build --config vite.extension.config.ts && npm run copy:extension-assets",
    "copy:extension-assets": "cp public/manifest.json dist-extension/ && cp -r public/icons dist-extension/ && cp public/content.css dist-extension/"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@gsap/react": "^2.1.2",
    "@react-three/drei": "^9.121.0",
    "@react-three/fiber": "^8.18.0",
    "@stripe/stripe-js": "^4.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/three": "^0.182.0",
    "canvas-confetti": "^1.9.4",
    "compression": "^1.8.1",
    "express": "^5.2.1",
    "fabric": "^5.3.0",
    "firebase": "^12.6.0",
    "firebase-functions": "^7.0.1",
    "framer-motion": "^12.25.0",
    "gsap": "^3.14.2",
    "html2canvas": "^1.4.1",
    "i18next": "^23.10.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.5.0",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.344.0",
    "mammoth": "^1.11.0",
    "pdfjs-dist": "^5.4.449",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.5.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^14.0.5",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^7.9.6",
    "react-sketch-canvas": "^6.2.0",
    "react-textarea-autosize": "^8.5.9",
    "recharts": "^3.7.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@google-cloud/translate": "^8.1.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/chrome": "^0.1.36",
    "@types/fabric": "^5.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fast-xml-parser": "^5.3.4",
    "lighthouse": "^13.0.1",
