{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en/pricing",
        "destination": "/nextjs/en/pricing.html"
      },
      {
        "source": "/en/contact",
        "destination": "/nextjs/en/contact.html"
      },
      {
        "source": "/en/signin",
        "destination": "/nextjs/en/signin.html"
      },
      {
        "source": "/en/signup",
        "destination": "/nextjs/en/signup.html"
      },
      {
        "source": "/en/blog",
        "destination": "/nextjs/en/blog.html"
      },
      {
        "source": "/zh/pricing",
        "destination": "/nextjs/zh/pricing.html"
      },
      {
        "source": "/zh/contact",
        "destination": "/nextjs/zh/contact.html"
      },
      {
        "source": "/zh/signin",
        "destination": "/nextjs/zh/signin.html"
      },
      {
        "source": "/zh/signup",
        "destination": "/nextjs/zh/signup.html"
      },
      {
        "source": "/zh/blog",
        "destination": "/nextjs/zh/blog.html"
      },
      {
        "source": "/es/pricing",
        "destination": "/nextjs/es/pricing.html"
      },
      {
        "source": "/es/contact",
        "destination": "/nextjs/es/contact.html"
      },
      {
        "source": "/es/signin",
        "destination": "/nextjs/es/signin.html"
      },
      {
        "source": "/es/signup",
        "destination": "/nextjs/es/signup.html"
      },
      {
        "source": "/es/blog",
        "destination": "/nextjs/es/blog.html"
      },
      {
        "source": "/en",
        "destination": "/nextjs/en.html"
      },
      {
        "source": "/en/",
        "destination": "/nextjs/en.html"
      },
      {
        "source": "/zh",
        "destination": "/nextjs/zh.html"
      },
      {
        "source": "/zh/",
        "destination": "/nextjs/zh.html"
      },
      {
        "source": "/es",
        "destination": "/nextjs/es.html"
      },
      {
        "source": "/es/",
        "destination": "/nextjs/es.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "extensions": {
    "firestore-send-email": "firebase/firestore-send-email@0.2.4"
  }
}
